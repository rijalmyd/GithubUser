<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="132dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/shape"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextStyle.Bold.Cons"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_visibility"
        tools:text="Jetpack e fvvdvhvddhbdsggdghaghdghvahdvhvdjf gPro"/>

    <TextView
        android:id="@+id/tv_visibility"
        style="@style/TextStyle"
        android:textColor="@color/grey"
        android:background="@drawable/bg_text"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        tools:text="Public"/>

    <TextView
        android:id="@+id/tv_description"
        style="@style/TextStyle"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1.0"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_language"
        tools:text="Ini adalah tugas submission dari dicoding academy kelas membuat Aplikasi Android Jetpack Pro"/>

    <TextView
        android:id="@+id/tv_language"
        style="@style/TextStyle"
        android:drawablePadding="8dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:drawableStart="@drawable/ic_baseline_circle_24"
        tools:text="Kotlin"/>

    <TextView
        android:id="@+id/tv_stars"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_language"
        app:layout_constraintTop_toTopOf="@id/tv_language"
        app:layout_constraintBottom_toBottomOf="parent"
        app:drawableStartCompat="@drawable/ic_baseline_star_border_24"
        tools:text="6"/>

    <TextView
        android:id="@+id/tv_updated_at"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_stars"
        app:layout_constraintStart_toEndOf="@id/tv_stars"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Updated 3 days ago"/>
</androidx.constraintlayout.widget.ConstraintLayout>